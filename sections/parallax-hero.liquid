<style>
    .parallax-inner-div {
        position: relative;
        width: 100%;
        height: 55vw;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        background-image: linear-gradient(to top, #909ea6, #e0cfbd, #9bacbe);
    }

    .parallax-inner-div img{
        position: absolute;
        top:0;
        left:0;
        width: 100%;
        height: auto;
        object-fit: cover;
    }
</style>
<div class="parallax-container">
    <div class="parallax-inner-div">
        <img src="{{ section.settings.parallax_first_layer | image_url: width: 1500 }}" alt="" id="layer1">
        <img src="{{ section.settings.parallax_second_layer | image_url: width: 1500 }}" alt="" id="layer2">
        <img src="{{ section.settings.parallax_third_layer | image_url: width: 1500 }}" alt="" id="layer3">
    </div>
</div>

<script>
    let parliament = document.getElementById("layer1");
    let buildings = document.getElementById("layer2");
    let pillars = document.getElementById("layer3");
    let innerDiv = document.querySelector(".parallax-inner-div");

    window.addEventListener('scroll', () => {
        var value = window.scrollY;


        parliament.style.top = value*0.30 + 'px';
        buildings.style.top = value*0.15 + 'px';

       
        
        
  
    })
</script>

